<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#78808e" />

            <corners
                android:bottomLeftRadius="10dip"
                android:bottomRightRadius="10dip"
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip" />
        </shape>
    </item>
    <item
        android:bottom="1dip"
        android:left="1dip"
        android:right="1dip"
        android:top="1dip">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#ccdff7"
                android:startColor="#00a1ed"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="10dip"
                android:bottomRightRadius="10dip"
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip" />
        </shape>
    </item>

</layer-list>