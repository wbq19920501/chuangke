<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dlg_width"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:paddingBottom="16dp"
    android:background="@drawable/white_round" >

    <TextView
        android:id="@+id/dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:padding="6dp"
        android:paddingLeft="16dp"
        android:text="时间选择"
        android:textColor="#424242"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/dlg_title"
        android:background="#ff8226" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <cn.com.easytaxi.book.view.scrollwheel.WheelView
            android:id="@+id/am_pm"
            android:layout_width="100dip"
            android:layout_height="wrap_content" />

        <cn.com.easytaxi.book.view.scrollwheel.WheelView
            android:id="@+id/clockadd_hour"
            android:layout_width="80dip"
            android:layout_height="wrap_content" />

        <cn.com.easytaxi.book.view.scrollwheel.WheelView
            android:id="@+id/clockadd_minutes"
            android:layout_width="80dip"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linear1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn026"
        android:text="确认"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_ok"
        android:layout_marginRight="18dp"
        android:background="@drawable/btn026"
        android:text="取消"
        android:textColor="#000"
        android:textSize="18sp" />

</RelativeLayout>