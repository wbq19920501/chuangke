<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F3F3F3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="温馨提示：异地预约代驾请注意选择城市"
                android:textColor="@color/orange"
                android:visibility="visible"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1.0"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_tuchu"
                    android:descendantFocusability="beforeDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="联系电话" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <EditText
                        android:id="@+id/et_book_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/img_right_arrow"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:paddingRight="10dp"
                        android:text="本机号码" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="默认预约 "
                    android:textColor="@color/orange"
                    android:visibility="gone" 
                     android:textSize="14sp" />
                
                 <TextView
                    android:id="@+id/default_book_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="一定时间"
                    android:textColor="@color/orange"
                    android:visibility="gone" 
                    android:textSize="14sp"/>
                 
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="后的出租车"
                    android:textColor="@color/orange"
                    android:visibility="gone"
                    android:textSize="14sp" />
            </LinearLayout>
            
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_tuchu"
                    android:descendantFocusability="afterDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="用车时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <EditText
                        android:id="@+id/et_book_usetime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/img_right_arrow"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:text="现在用车" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/book_publish_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="@string/addr_tip"
                android:textColor="@color/orange"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="预约外地用车记得切换城市哦"
                android:textColor="@color/orange"
                android:visibility="gone"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_aojin"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <!-- <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/pic765"
                        android:gravity="center"
                        android:text="上车地点" /> -->
                         <ImageView 
                        android:src="@drawable/pic155"
                        android:background="@drawable/pic765"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="1dp"/> 

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <Button
                        android:id="@+id/start_city"
                        style="@style/book_city_label_text"
                         android:layout_width="wrap_content"
                        android:minWidth="49dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg019"
                        android:text="城市" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <TextView
                        android:id="@+id/et_book_startaddr"
                        style="@style/book_label_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:hint="上车地点"
                        android:text="" />

                    <Button
                        android:id="@+id/btn_book_startloc"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/btn039"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_aojin"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <!-- <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/pic765"
                        android:gravity="center"
                        android:text="下车地点" /> -->
                   <ImageView 
                        android:src="@drawable/pic155_end"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@drawable/pic765"
                        android:paddingLeft="1dp"/> 

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <Button
                        android:id="@+id/end_city"
                        style="@style/book_city_label_text"
                        android:layout_width="wrap_content"
                        android:minWidth="49dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg019"
                        android:text="城市" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <TextView
                        android:id="@+id/et_book_endaddr"
                        style="@style/book_label_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:hint="下车地点"
                        android:text="" />

                    <Button
                        android:id="@+id/btn_book_endloc"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/btn039"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            
            <EditText 
            android:id="@+id/book_scrollingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="108dp"
            android:singleLine="false"
            android:inputType="none"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:hint=""
            android:text="(1)租金：\n车辆使用费+司机代驾费\n(2)超里程费：\n日行驶里程超过规定里程限制的，收取车辆超里程费。\n(3)超时费：\n自约定起始时间起，日代驾使用时间超过日限时间的，根据超时小时数计算超时费用：\n超时30分钟（含）以内的按半小时计算；\n超时30分钟到1小时（含）的按1小时计算；\n超时1小时到1小时30分钟（含）的按1.5小时计算，以此类推；\n超时在4小时之上9小时之下，加收一天租金，在此情况下，里程数限制按照相应变化。"
         	android:textColor="@color/orange"
         	android:background="@null"
         	android:editable="false"
         	android:textSize="14sp"
          />
        </LinearLayout>

 
<LinearLayout 
    android:id="@+id/one_speak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic105"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/book_send"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/btn026"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/pic135" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#ffffffff"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:soundEffectsEnabled="true"
                android:text="提交"
                android:textColor="#ff424242"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cover_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#33000000"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#222222"
            android:padding="10dp" >

            <ProgressBar
                android:id="@+id/progressBar_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>