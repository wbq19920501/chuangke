<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F3F3F3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="温馨提示:异地预约接机送机,请注意选择城市"
                android:textColor="@color/orange"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1.0"
                android:gravity="center" 
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_tuchu"
                    android:descendantFocusability="beforeDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="联系电话" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <EditText
                        android:id="@+id/et_airport_book_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/img_right_arrow"
                        android:gravity="right|center_vertical"
                        android:inputType="phone"
                        android:paddingRight="10dp"
                        android:text="本机号码" >
                    </EditText>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:text="@string/tip_book_time"
                    android:textColor="@color/orange"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_tuchu"
                    android:descendantFocusability="afterDescendants"
                    android:gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="用车时间" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                    <EditText
                        android:id="@+id/et_airport_book_usetime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/img_right_arrow"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:text="现在用车" >
                    </EditText>
                </LinearLayout>
                
                <!-- <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingTop="4dp"
                    android:text="@string/airplan_number_str"
                    android:textColor="@color/orange"
                    android:visibility="gone" /> -->
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/book_airport_publish_distance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="@string/airplan_number_str"
                android:textColor="@color/orange"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_airport_background"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/start_icon"
                                style="@style/book_label_text"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:src="@drawable/pic155"
                                android:gravity="center"
                                android:text="" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_book_vertical" />

                            <Button
                                android:id="@+id/start_airport"
                                style="@style/book_city_label_text"
                                android:layout_width="wrap_content"
                                android:minWidth="49dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg019"
                                android:text="城市" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_book_vertical" />

                            
                            
                            <TextView
                                android:id="@+id/et_airport_book_startaddr"
                                style="@style/book_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@null"
                                android:gravity="left|center_vertical"
                                android:paddingRight="1dp"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:hint="上车地址"
                                android:text="" />

                            <Button
                                android:id="@+id/btn_airport_book_startloc"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginRight="1dp"
                                android:background="@drawable/btn039"
                                android:visibility="gone" />
                        </LinearLayout>

                        <ImageView android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/line_book_hor"/>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/end_icon"
                                style="@style/book_label_text"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="6dp"
                                android:src="@drawable/airport"
                                android:gravity="center"
                                android:text="" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_book_vertical" />

                            <Button
                                android:id="@+id/end_airport"
                                style="@style/book_city_label_text"
                                android:layout_width="wrap_content"
                                android:minWidth="49dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg019"
                                android:text="城市" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_book_vertical" />

                            
                          
                            
                            
                            <TextView
                                android:id="@+id/et_airport_book_endaddr"
                                style="@style/book_label_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@null"
                                android:gravity="left|center_vertical"
                                android:paddingRight="1dp"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:hint="送机地址"
                                android:text="" />

                            <Button
                                android:id="@+id/btn_airport_book_endloc"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginRight="1dp"
                                android:background="@drawable/btn039"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                    
                     <ImageView android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/line_book_vertical"/>
                     
                    <ImageButton
                        android:id="@+id/switch_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_margin="2dp"
                        android:background="@drawable/switch_airport" />
                </LinearLayout>
            </LinearLayout>
            
            
             <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
	            android:orientation="vertical" >
                 <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_book_aojin"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/book_label_text"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/pic765"
                        android:gravity="center"
                        android:text="航班号" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/line_book_vertical" />

                        <EditText
                        android:id="@+id/airplan_number_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="建议填写,掌握延误信息"
                        android:text="" >
                    </EditText>
                </LinearLayout>
             </LinearLayout>
        </LinearLayout>

        <cn.com.easytaxi.airport.view.ScrollingTextView
            android:id="@+id/scrollingTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="温馨提醒：高峰时期、短途用车，建议适当加价！"
            android:textColor="@color/gray_black"
            android:visibility="visible" 
            android:ellipsize="marquee" 
            android:focusable="true" 
            android:marqueeRepeatLimit="marquee_forever" 
            android:focusableInTouchMode="true" 
            android:scrollHorizontally="true"
            android:gravity="center_horizontal"/>
        

        <include
            android:id="@+id/one_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/book_publish_layout" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/airport_cover_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#33000000"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#222222"
            android:padding="10dp" >

            <ProgressBar
                android:id="@+id/progressBar_loading"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>