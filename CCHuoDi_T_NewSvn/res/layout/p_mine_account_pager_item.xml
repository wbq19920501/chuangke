<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg002"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_account_list_title"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#e5e5e5" >

            <TextView
                android:id="@+id/p_mine_account_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/acc_date"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="03-23"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_img_time" />

            <TextView
                android:id="@+id/p_mine_account_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/acc_date"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="03-23"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1.0"
                android:scaleType="fitEnd"
                android:src="@drawable/bg_img_heji" />

            <TextView
                android:id="@+id/p_mine_account_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#666666"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/p_mine_account_countunit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="元"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/p_mine_account_column_time"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="时间"
                android:textColor="#303030"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/p_mine_account_column_count"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="金额（元）"
                android:textColor="#303030"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/p_mine_account_column_remark"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="备注"
                android:textColor="#303030"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <cn.com.easytaxi.common.XListView
        android:id="@+id/p_mine_account_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/bg_list_driver"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="false" >
    </cn.com.easytaxi.common.XListView>

</LinearLayout>