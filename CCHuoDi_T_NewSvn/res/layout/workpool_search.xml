<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:et="http://schemas.android.com/apk/res/com.easytaxi.etpassengersx"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F6F6F6"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/workpool_start_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="起始地址："
            android:textColor="#5C5C5C"
            android:textSize="16dip" />

        <cn.com.easytaxi.workpool.view.AddressEditView
            android:id="@+id/workpool_start"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/workpool_start_lable"
            android:background="#00FFFFFF"
            et:hint="请输入起始地址" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/workpool_end_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="目的地址："
            android:textColor="#5C5C5C"
            android:textSize="16dip" />

        <cn.com.easytaxi.workpool.view.AddressEditView
            android:id="@+id/workpool_end"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/workpool_end_lable"
            android:background="#00FFFFFF"
            et:hint="请输入目的地址" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/workpool_search_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg010"
            android:text="找乘客" />

        <Button
            android:id="@+id/workpool_search_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg011"
            android:text="找司机" />
    </LinearLayout>

</LinearLayout>