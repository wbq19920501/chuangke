<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_and_retry_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/loading_progress"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="26.0dip"
            android:layout_height="26.0dip"
            android:layout_marginRight="5.0dip" />

        <TextView
            android:id="@+id/loading_textview"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ff737373"
            android:textSize="17.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_short"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/loading_textview_short"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="hihihihi"
            android:textColor="#ff737373"
            android:textSize="17.0sp" />
    </LinearLayout>

</FrameLayout>