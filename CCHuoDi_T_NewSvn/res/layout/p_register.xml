<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg002"
    android:orientation="vertical" >

    <include
        android:id="@+id/map_title_bar"
        layout="@layout/title_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:focusable="false"
        android:text="注册信息"
        android:textColor="#fcc424"
        android:textSize="14dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dip"
        android:background="@drawable/bg009"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="用户姓名："
                android:textColor="#1c0a0a"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/register_nickname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:hint="请输入您的姓名"
                android:inputType="text"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#C1C1C1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="用户性别："
                android:textColor="#1c0a0a"
                android:textSize="19sp" />

            <Spinner
                android:id="@+id/spinner_register_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#C1C1C1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="本机号码："
                android:textColor="#1c0a0a"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/register_mobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:hint="请输入本机真实号码"
                android:inputType="phone"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#C1C1C1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="推荐人姓名："
                android:textColor="#1c0a0a"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/register_recommend_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:hint="可以不输入"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#C1C1C1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="推荐人号码："
                android:textColor="#1c0a0a"
                android:textSize="16dip" />

            <EditText
                android:id="@+id/register_recommend"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00FFFFFF"
                android:hint="可以不输入"
                android:inputType="phone"
                android:textColorHint="#CDCDCD" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#C1C1C1"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="42dip"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dip" >

            <TextView
                android:id="@+id/reg_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:text="注  册  码："
                android:textColor="#1c0a0a"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/register_code"
                android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/reg_tip"
                android:background="#00FFFFFF"
                android:hint="注册码"
                android:inputType="phone"
                android:textColorHint="#CDCDCD" />

            <Button
                android:id="@+id/register_sendmsg"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/icon011"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:text="获取注册码"
                android:textColor="#FFFFFF"
                android:textSize="13dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dip"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/register_cb_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="我已阅读并同意"
            android:textColor="@color/gray_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/register_tv_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="doShowProtocol"
            android:text="服务条款"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dip"
        android:background="#147A7C"
        android:text="下一步"
        android:textColor="#FFFFFFff"
        android:textSize="26sp" />

</LinearLayout>